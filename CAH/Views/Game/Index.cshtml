@{
  Layout = "_Layout";
}

@using CAH.Models;

@model CAH.ViewModels.CardsViewModel;

@{
  Random random = new Random();
  var randomBlackCard = Model.BlackCards[random.Next(Model.BlackCards.Count)];
  var randomWhiteCard = Model.WhiteCards[random.Next(Model.WhiteCards.Count)];
}

<h1>Censorship Against Humanity</h1>

<br><br>
<h2>Random Black Card</h2>
<div class="blackCard">
  <p class="random-card">@randomBlackCard.Text</p>
</div>

<br><br>
<h2>Random White Card</h2>

<div class="whiteCardContainer">
  <div class="whiteCard">
      <p class="random-card">@randomWhiteCard.Text</p>
  </div>


  @if (TempData["RandomWhiteCard"] != null)
  {
      <div class="whiteCard">
        <p class="random-card">@TempData["RandomWhiteCard"]</p> 
      </div>  
  }

</div>

@using (Html.BeginForm("Create", "Game", FormMethod.Post))
{
  <button type="submit">Generate second card</button>
}
